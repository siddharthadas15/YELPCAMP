<%- include ("../partials/header") %>
<div class="container">
<h1 style="text-align:center">EDIT <%=campground.name%></h1>

    <div style="width:30%;margin:35px auto;">
<form method="POST" action="/campground/<%=campground._id%>?_method=PUT" class="form-group" class="form-control">
    <div class="form-group">
    <input type="text" name="campground[name]" value="<%=campground.name%>" class="form-control">
    </div>
    <div class="form-group">
    <input type="text" name="campground[image]" value="<%=campground.image%>" class="form-control">
    </div>
    <div class="form-group">
    <input type="text" name="campground[description]" value="<%=campground.description%>" class="form-control">
    </div>
    <button class="btn btn-primary btn-lg btn-block" style="margin-top:10px">Submit</button>
   <a href="/campground">Go Back</a>
    </div>
</form>
</div>
<%- include ("../partials/footer") %>