<%- include ("../partials/header") %>
<div class="container">
<h1 style="text-align:center">Create a new comment to <%= campground.name %></h1>

    <div style="width:30%;margin:35px auto;">
<form method="POST" action="/campground/<%= campground._id %>/comments" class="form-group" class="form-control">
   
    <div class="form-group">
    <input type="text" name="comment[text]" placeholder="Text" class="form-control">
    </div>
   
    <button class="btn btn-primary btn-lg btn-block" style="margin-top:10px">Submit</button>
   <a href="/campground">Go Back</a>
    </div>
</form>


</div>
